{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The main content area --}}
<div class="container mt-5 mb-5">
    <div class="row">

		{{> "sidebar"}}

        <article class="col main-content order-2 order-md-1">
            <div class="main-content-body">

                <div class="docs-box">
					<h1>elmah.io Blog</h1>
					<h2>Latest posts</h2>
					<div class="latestPosts">
						{{#foreach posts}}
						<div class="post">
							<a class="post-title" href="{{ url }}">{{title}}</a>
							<p>{{#primary_author}}{{name}}{{/primary_author}}, {{date published_at format="MMMM DD, YYYY"}} {{excerpt}} ...</p>
						</div>
						{{/foreach}}
					</div>
				</div>

            </div>
        </article>

    </div>
</div>
