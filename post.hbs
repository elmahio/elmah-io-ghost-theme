{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The main content area --}}

<div class="container mt-5 mb-5">
    <div class="row">

    	{{> "sidebar"}}

        <article class="col main-content">
            <div class="main-content-body">
            	<div class="docs-box docs-post">
					{{#post}}

					<h1>{{title}}</h1>
					<div class="post-author">Written by {{author}}, {{date published_at format="MMMM DD, YYYY"}}</div>

					{{content}}

					<br><br>
					<div class="addthis_inline_share_toolbox"></div>
					<p><small><em>This post was brought to you by the elmah.io team. elmah.io is the best error management system for .NET web applications. We monitor your website, alert you when errors start happening and help you fix errors fast.</em></small></p>

					<p class="text-center">
						<a href="https://app.elmah.io/signup/?utm_source=blogcta&utm_medium=blog&utm_campaign=blogcta" class="btn btn-lg btn-primary d-none d-sm-block" style="white-space: normal;">See how we can help you monitor your website for crashes</a>
						<a href="https://app.elmah.io/signup/?utm_source=blogcta&utm_medium=blog&utm_campaign=blogcta" class="btn btn-lg btn-primary d-block d-sm-none">Monitor your website</a>
					</p>

					{{/post}}
				</div>
			</div>
		</article>

	</div>
</div>
