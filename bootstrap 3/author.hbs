{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The main content area --}}
<div class="container">

	<div class="row">

		<div class="col-md-3" role="complementary">
			<div class="sidebar-wrapper">
				<div class="input-group">
					<div class="input-group-addon"><i class="fa fa-search"></i></div>
					<input type="text" class="form-control" id="search" placeholder="Search ..." autocomplete="off" />
				</div>
				<div id="searchList"></div>

				<hr style="border-color: #ddd;">

				<div class="posts-wrapper hidden-xs">
					<h3>Posts</h3>
					<div id="postList"></div>
				</div>
				<a href="javascript:;" class="btn btn-default btn-block" id="show-all-posts">Show all posts</a>
			</div>
		</div>
		<div class="col-md-9" role="main">
			<div class="docs-box">
				{{#author}}
				<div class="author-header-content">
					{{#if cover_image}}
					<div class="author-cover-image" style="background-image: url({{cover_image}});"></div>
					{{/if}}
					<div class="author-profile" {{#if cover_image}} style="padding-top: 0px;" {{/if}}>
		            	{{#if profile_image}}
		                <img class="author-profile-image" src="{{profile_image}}" alt="{{name}}" {{#if cover_image}} style="margin-top: -30px;" {{/if}} />
		            	{{/if}}
		            	<h1 class="site-title">{{name}}</h1>
			            {{#if bio}}
			            <h2 class="author-bio">{{bio}}</h2>
			            {{/if}}
			            <div class="author-meta">
			                {{#if location}}
			                    <div class="author-location">{{location}} <span class="bull">&bull;</span></div>
			                {{/if}}
			                <div class="author-stats">
			                    {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}} <span class="bull">&bull;</span>
			                </div>
			                {{#if website}}
			                    <a class="social-link social-link-wb" href="{{website}}" target="_blank" rel="noopener"><span class="fa fa-globe"></span></a>
			                {{/if}}
			                {{#if twitter}}
			                    <a class="social-link social-link-tw" href="{{twitter_url}}" target="_blank" rel="noopener"><span class="fa fa-twitter"></span></a>
			                {{/if}}
			                {{#if facebook}}
			                    <a class="social-link social-link-fb" href="{{facebook_url}}" target="_blank" rel="noopener"><span class="fa fa-facebook"></span></a>
			                {{/if}}
			                <a class="social-link social-link-rss" href="https://feedly.com/i/subscription/feed/{{url absolute="true"}}/rss/" target="_blank" rel="noopener"><span class="fa fa-rss"></span></a>
			            </div>
		        	</div>
		        </div>
		        {{/author}}

		        <div class="post-feed">
		            {{#foreach posts}}
	            	<div class="post">
						<a class="post-title" href="{{ url }}">{{title}}</a>
						<p>{{excerpt}}</p>
					</div>
		            {{/foreach}}
		            {{pagination}}
		        </div>
			</div>
		</div>

	</div>

</div>
